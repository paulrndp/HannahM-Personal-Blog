@model Blog

<style>
    .pullright {
        float: right;
        margin: 2px;
    }
</style>
@using (Html.BeginForm("Edit", "Blog", FormMethod.Post))
{
    <div class="row">
        <div class="d-flex align-items-center justify-content-center">
            <div class="col-8 ">
                <div class="pullright mb-3">
                    <div class="input-group ">
                        <button class="btn btn-secondary btn-fw" type="submit" name="submit" value="Draft"><i class="bi bi-save-fill"></i> Save</button>&nbsp;
                        <button class="btn btn-success btn-fw" type="submit" name="submit" value="Published"><i class="bi bi-check-circle-fill"></i> Publish</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="d-flex align-items-center justify-content-center">
            <div class="col-8">
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"> <i class="mdi mdi-lead-pencil"></i></span>
                                <input asp-for="Title" type="text" class="form-control text-white">
                            </div>
                        </div>

                        <div class="">
                            <textarea class="ckeditor" asp-for="Content"></textarea>
                            <script>
                                CKEDITOR.replace('editor1', {
                                    height: 400
                                });
                            </script>
                        </div>

                    </div>
                </div>
                <div class="pullright p-1">
                        <a href="@Url.ActionLink("Delete", "Blog", new { id = Model.Id })" class="btn btn-inverse-danger btn-fw">
                         <i class="bi bi-trash3-fill"> </i>
                         <label>Delete</label>
                        </a>
            
                </div>
            </div>
        </div>
    </div>
}