@model IEnumerable<Chapters>
<style>
    .pullright {
        float: right;
        margin: 2px;
    }
</style>
<partial name="_Notification" />
@using (Html.BeginForm("Chapters", "Story", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @foreach (var item in Model)
    {

        <div class="row">
            <div class="d-flex align-items-center justify-content-center">
                <div class="col-7 stretch-card mb-2">
                    <div class="card ">
                        <div class="card-body">
                            <div class="col-sm-12 mb-3">
                                <h3 class="d-inline-block align-middle text-warning">@item.Title</h3>
                                <ul class="navbar-nav navbar-nav-right d-inline-block pullright">
                                    <li class="nav-item dropdown border-left">
                                        <a class="btn btn-primary" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                                            &nbsp; <i class="bi bi-three-dots"></i>
                                            <span class="count bg-danger"></span>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                                            <a class="dropdown-item preview-item" asp-controller="Story" asp-action="Edit" asp-route-id="@item.Id">
                                                <div class="preview-thumbnail">
                                                    <div class="preview-icon bg-dark rounded-circle">
                                                       <i class="bi bi-pencil-square text-success"></i>
                                                    </div>
                                                </div>
                                                <div class="preview-item-content">
                                                    <p class="preview-subject mb-1 text-light pe-auto">Edit</p>
                                                    <p class="text-muted ellipsis mb-0"> Update content </p>
                                                </div>
                                            </a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item preview-item" asp-controller="Story" asp-action="Edit" asp-route-id="@item.Id">
                                                <div class="preview-thumbnail">
                                                    <div class="preview-icon bg-dark rounded-circle">
                                                        <i class="bi bi-trash3 text-danger"></i>
                                                    </div>
                                                </div>
                                                <div class="preview-item-content">
                                                    <p class="preview-subject mb-1 text-light">Delete</p>
                                                    <p class="text-muted ellipsis mb-0"> Delete this chapter </p>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                </ul>

                            </div>

                            <p class="text-muted"><em class="text-muted">@Html.Raw(item.Content.Substring(0, Math.Min(item.Content.Length, 150)))... </em></p>
                            <p class="card-description"> Published  -  @item.CreatedDateTime.ToString("MMMM dd yyyy")
</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
