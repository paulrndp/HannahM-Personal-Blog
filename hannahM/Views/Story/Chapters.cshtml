@model IEnumerable<StoryViewModel>

<partial name="_Notification" />

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">@ViewBag.Title</span>
        <h3 class="page-title">Chapters</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-5 col-sm-12 mb-3">
        <div class="card">
                <div class="row g-0">
                    <div class="col-sm-5">
                        @if (ViewBag.Cover != null && !String.IsNullOrEmpty(Convert.ToBase64String(ViewBag.Cover)))
                        {
                            <img src="data:image/jpg;base64,@Convert.ToBase64String(ViewBag.Cover)" class="card-img-top h-100" alt="...">
                        }
                        else
                        {
                            <img src="//upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg" class="card-img-top h-100" alt="...">
                        }
                    </div>
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title">@ViewBag.Title</h5>
                            <p class="card-text">@ViewBag.Desc</p>
                            <div class="d-flex mb-3">
                                <small class="text-muted"><i class="fas fa-list mr-1"></i>3 Part</small>&ensp;
                                <small class="text-muted"><i class="fas fa-eye mr-1">&nbsp;</i>1,234 Reads</small>&ensp;
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <div class="col-lg-7 mb-3">
        <div class="card card-small mb-4">
            <h6 class="card-header d-flex justify-content-between align-items-center">
                <b>Table of Contents</b>
                <button type="button" class="btn btn-sm btn-success" asp-action="Add"><i class="fas fa-plus mr-1"></i> Add Chapter</button>
            </h6>
            <div class="card-body p-0 pb-3 table-responsive">
                <table class="table mb-0 table-borderless">
                    <thead>
                        <tr class="border-bottom">
                            <th>Chapter Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td href="">
                                    @item.chapters.Title
                                </td>
                                <td class="text-right">
                                    <a asp-controller="Story" asp-action="EditChapter" asp-route-id="@item.chapters.Id" asp-route-slug="@item.chapters.Slug" type="button" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    CKEDITOR.replace('editor1', {
        height: 350
    });
</script>