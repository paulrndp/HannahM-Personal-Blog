@model IEnumerable<Chapters>

<partial name="_Notification" />

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">@ViewBag.Title</span>
        <h3 class="page-title">Chapters</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-3">
        <div class="col-md-12">
            <div class="list-group">
                @foreach (var item in Model)
                {
                      <a class="list-group-item list-group-item-action">@item.Title </a>
                }
                </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="col-lg-12 col-md-12">
            <div class="card card-small mb-3">
                <div class="card-body">
                     <input name="" class="form-control form-control-lg mb-3" type="text" placeholder="Your Post Title">
                    <textarea class="ckeditor" id="editor1"></textarea>                       
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class='card card-small mb-3'>
                <div class="card-header border-bottom">
                    <h6 class="m-0">Actions</h6>
                </div>
                <div class='card-body p-0'>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex px-3">
                            <button class="btn btn-sm btn-outline-accent" type="submit" name="submit" value="Draft">
                                <i class="material-icons">save</i> Save Draft
                            </button>
                            <button class="btn btn-sm btn-accent ml-auto" type="submit" name="submit" value="Published">
                                <i class="material-icons">file_copy</i> Publish
                            </button>
                        </li>

                    </ul>
                </div>
            </div>

        </div>
    </div>

</div>
<script>
    CKEDITOR.replace('editor1', {
        height: 350
    });
</script>
