<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Blog & Random Thoughts Posts</span>
        <h3 class="page-title">Add New Post</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-9 col-md-12">
        <div class="card card-small mb-3">
            <div class="card-body">
                <form class="add-new-post">
                    <input class="form-control form-control-lg mb-3" type="text" placeholder="Your Post Title">
                    <div id="editor-container" class="add-new-post__editor mb-1"></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-12">
        <div class='card card-small mb-3'>
            <div class="card-header border-bottom">
                <h6 class="m-0">Actions</h6>
            </div>
            <div class='card-body p-0'>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <span class="d-flex">
                            <i class="material-icons mr-1">subtitles</i>
                            <strong class="mr-1">Words</strong>
                            <strong class="ml-auto text-warning">0</strong>
                        </span>
                    </li>
                    <li class="list-group-item p-3">
                        <span class="d-flex">
                            <i class="material-icons mr-1">add_to_photos</i>
                            <strong class="mr-1">Post Type</strong>
                            <select id="inputState" class="form-control col-md-6 ml-auto">
                                <option selected>Choose...</option>
                                <option>Blog</option>
                                <option>Random Thoughts</option>
                            </select>
                        </span>
                    </li>
                    <li class="list-group-item d-flex px-3">
                        <button class="btn btn-sm btn-outline-accent">
                            <i class="material-icons">save</i> Save Draft
                        </button>
                        <button class="btn btn-sm btn-accent ml-auto">
                            <i class="material-icons">file_copy</i> Publish
                        </button>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>
